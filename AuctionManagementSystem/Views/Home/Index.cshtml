                </div>
            </div>
        </div>

        <div class="row g-4">
            @if (appovedVehicels.Count() > 0)
            {
                foreach (var item in appovedVehicels)
                {
                    <div class="col-lg-4 col-md-6 ">
                        <div class="product-card product-beta-md">
                            <div class="product-header">
                                <h6 class="product-title"><a href="AuctionDetails">@item.Year</a></h6>
                                <h4 class="price">@item.FullName</h4>
                            </div>

                            <div class="product">
                                <img src="@Url.Content(item.VehicleImages?.FirstOrDefault().ImagePath)">
                                <div class="id"><span>VIN-@item.VIN</span></div>
                            </div>

                            <div class="product-disc">
                                <div class="product-acution">
                                    <div class="cv">
                                        <span>current Bid</span>
                                        @if (item.Bids!=null && item.Bids.Count()>0)
                                        {
                                            <h6>$@item.Bids.Max(x=>x.BidAmount)</h6>
                                        }
                                        else
                                        {
                                            <h6>No bidding found.</h6>
                                        }
                                    </div>
                                    <div class="countdown" id="week-countdown5">
                                        <h6>  </h6>
                                        <span>Waiting For Bid</span>
                                    </div>
                                </div>
                                @if (item.IsApproved=="1")
                                {
                                    <a href="Vehicle/AuctionDetails?AvId=@item.AvId" class="bid-btn">Submit A Bid</a>
                                }
                                else
                                {
                                    <a href="javascript:void()" class="bid-btn">Pending for approval</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            <div class="view-btn mt-50 text-center">
                <a href="#" class="alpha-btn-md-dark">View All</a>
            </div>
        </div>
    </div>
</div>
