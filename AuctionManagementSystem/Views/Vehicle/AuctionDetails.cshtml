    <!-- Custom JavaScript -->
    @*  <script src="assets/js/main.js"></script>*@
    <script>
        function SaveBid(Id) {
            debugger;
            var BidAmount = $("#txtBidAmount").val();
            if (BidAmount == "") {
                swal("Error", "Please enter a valid amount.", "error");
                return false;
            }
            $.ajax({
                type: "POST",
                url: "/Vehicle/SaveBid",
                data: { VehicleId: Id, amount: BidAmount },
                dataType: "json",
                success: function (data) {
                    if (data == 1) {
                        swal("Saved!", "Your Bid Has Been Saved Succesfully.", "success");
                        setTimeout(function () {
                            location.reload();
                        }, 3000);
                    }
                    else {
                        swal("Error!", "Something went wrong.", "error");
                        return false;
                    }
                },
                error: function () {
                    swal("Error", "Something went wrong.", "error");
                }
            });
            return false;
        }
    </script>

