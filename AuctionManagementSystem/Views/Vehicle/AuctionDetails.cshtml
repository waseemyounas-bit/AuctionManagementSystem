    <script>
          function SaveBid()
          {
             debugger;
            const urlParams = new URLSearchParams(window.location.search);
            const AvId = urlParams.get('AvId');
            var BidAmount = $("#txtBidAmount").val();
            if (BidAmount=="")
            {
                swal("Error", "Bid Amount Can't be Null.", "error");
                return false;
            }
            $.ajax({
                type: "POST",
                url: "/Vehicle/SaveBid",
                data: { PostId: AvId, amount: BidAmount },
                dataType: "json",
                success: function (data) {
                    if (data == 1)
                    {
                        swal("Saved!", "Your Bid Has Been Saved Succesfully.", "success");
                        setTimeout(function () {
                            location.reload();
                        }, 3000);
                        location.href = '~?Home/Index';
                        return true
                    }
                    else
                    {
                        swal("Error!", "Something went wrong.", "error");
                        return false;
                    }
                },
                error: function () {
                    swal("Error", "Something went wrong.", "error");
                }
            });
            return false;
          }
    </script>
    
