<div class="contact-wrapper  mt-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header mx-auto text-center">
                    <h3>Submit your vehicle</h3>
                    <p>Please submit this initial form to provide us with basic information about your vehicle.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-5">
                <div class="contact-box-wrap">

                    <div class="single-contact-box">
                        <h6>Let’s Talk</h6>
                        <a href="#" class="location">
                            <p>Please submit this initial form to provide us with basic information about your vehicle. We typically reply within one business day, and might ask some additional questions to confirm if your vehicle is a good fit for auction.</p>
                        </a>
                    </div>
                    <div class="single-contact-box">
                        <h6>Loacation.</h6>
                        <a href="#" class="location">168/170, Ave 01, Streets Suite 66xyz, Bangladesh</a>
                    </div>
                    <div class="single-contact-box">
                        <h6>Social Site Link</h6>
                        <a href="#" class="weblink">Facebook: https://www.facebook.com/egenstheme</a>
                        <a href="#" class="weblink">Twitter: https://www.twitter.com/egenstheme</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 mt-5 mt-lg-0">
                <div class="contact-form">
                    <h4>Vehicle Information</h4>
                    <form action="vehiclesubmission" id="contact_form" method="post" enctype="multipart/form-data">

                        @if (TempData["pesan"] != null)
                        {
                            <script type="text/javascript">
                                window.onload = function () {
                                    swal("Good job!", '@TempData["pesan"]', "success");
                                };
                            </script>
                        }

                        <div class="contact-input-group">
                            <label for="first-Name">Full name</label>
                            <input type="text" name="FullName" value="@Model.FullName" placeholder="Your FullName">
                            <input type="text" name="ImagePath" value="@Model.ImagePath" style="display:none">
                            @Html.ValidationMessageFor(x=>x.FullName,string.Empty,new {@class="text-danger"})
                        </div>
                        <h4>Vehicle Details</h4>
                        <div class="contact-input-group">
                            <label for="first-Name">Year</label>
                            <input type="number" placeholder="Enter year" id="VehicledetailsYear" name="Year" value="@Model.Year">
                            @Html.ValidationMessageFor(x=>x.Year,string.Empty,new {@class="text-danger"})
                        </div>
                        <div class="contact-input-group">
                            <label for="first-Name">Make</label>
                            <input id="Make" name="Make" placeholder="Enter car manufacturer" value="@Model.Make">
                            @Html.ValidationMessageFor(x=>x.Make,string.Empty,new {@class="text-danger"})
                        </div>
                        <div class="contact-input-group">
                            <label for="first-Name">Model</label>
                            <input id="3" name="Model" placeholder="Enter model" value="@Model.Model">
                            @Html.ValidationMessageFor(x=>x.Model,string.Empty,new {@class="text-danger"})
                        </div>
                        <div class="contact-input-group">
                            <label for="first-Name">Vehicle Identification Number (VIN)</label>
                            <input id="VIN" name="VIN" maxlength="17" placeholder="Enter VIN" value="@Model.VIN">
                            @Html.ValidationMessageFor(x=>x.VIN,string.Empty,new {@class="text-danger"})
                        </div>
                        <div class="contact-input-group">
                            <label for="first-Name">Current odometer reading</label>
                            <input type="number" placeholder="Enter current odometer reading" min="0" name="COR" value="@Model.COR">
                            @Html.ValidationMessageFor(x=>x.COR,string.Empty,new {@class="text-danger"})
                        </div>
                        <div class="mt-3">
                            @*<label for="email">Miles</label>*@
                            <div class="form-check">
                                <input type="radio" class="form-check-input" value="MILES" name="CORType" id="MILES">
                                <label class="form-check-label" for="flexRadioDefault1"> Miles</label>
                            </div>
                            <br />
                            <div class="form-check">
                                <input type="radio" class="form-check-input" value="KILOMETERS" name="CORType" id="MILES" checked>
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Kilometers
                                </label>
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="email">Does the above odometer reading reflect the total mileage on this vehicle?</label>
                            <div class="switch-field">
                                <input type="radio" id="btnCorTypeYes" name="odometerreadingreflect" value="yes" />
                                <label for="btnCorTypeYes">Yes</label>
                                <input type="radio" id="btn_CorTypeNo" name="odometerreadingreflect" value="no" checked />
                                <label for="btn_CorTypeNo">No</label>
                            </div>
                        </div>

                        <div class="contact-input-group" id="CORTypeYN">
                            <label for="email">Text Area</label>
                           @* <textarea class="txtarea" style="height:30px;" rows="3" name="Text" Id="Text" value=""> </textarea>*@
                            <textarea class="txtarea" id="OORMilegeRemarks" name="OORMilegeRemarks" cols="30" rows="7" value="" placeholder="Enter current odometer reading details"></textarea>
                         @Html.ValidationMessageFor(x=>x.OORMilegeRemarks,string.Empty,new {@class="text-danger"})
                        </div>
                        <h4>
                            Vehicle History &amp; Condition
                        </h4>
                        <div class="mt-3">
                            <label for="email">What month/year did you purchase this vehicle?</label>
                            <div class="row">
                                <div class="col">
                                    <input type="number" placeholder="MM" class="form-control" value="@Model.VehiclePurchaseMoth" id="VehiclePurchaseMoth" name="VehiclePurchaseMoth">
                                    @Html.ValidationMessageFor(x=>x.VehiclePurchaseMoth,string.Empty,new {@class="text-danger"})
                                </div>
                                <div class="col">
                                    <input type="number" placeholder="YYYY" id="VehiclePurchaseYear" value="@Model.VehiclePurchaseYear" name="VehiclePurchaseYear">
                                    @Html.ValidationMessageFor(x=>x.VehiclePurchaseYear,string.Empty,new {@class="text-danger"})
                                </div>
                            </div>
                        </div>
                        <div class="contact-input-group">
                            <label for="first-Name">How many miles (or kilometers) have been added during your ownership?</label>
                            <input type="number" placeholder="Enter miles/kilometers" min="0" value="@Model.Vmiles" name="Vmiles">
                            @Html.ValidationMessageFor(x=>x.Vmiles,string.Empty,new {@class="text-danger"})
                        </div>
                        <div class="mt-3">
                            @* <label for="email">Does the above odometer reading reflect the total mileage on this vehicle?</label>*@
                            <div class="switch-field">
                                <input type="radio" value="MILES" name="mileageDistanceUnit" id="mileageDistanceUnitY">
                                <label for="mileageDistanceUnitY">MILES</label>
                                <input type="radio" id="mileageDistanceUnitN" name="mileageDistanceUnit" value="Kilometers" checked />
                                <label for="mileageDistanceUnitN">Kilometers</label>
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="email">Do you know anything about this vehicle's prior ownership or history?</label>
                            <div class="switch-field">
                                <input type="radio" id="btn_VehicleOwnerShipHistoryY" name="VehicleOwnerShipHistory" value="Yes" />
                                <label for="btn_VehicleOwnerShipHistoryY">Yes</label>
                                <input type="radio" id="btn_VehicleOwnerShipHistoryN" name="VehicleOwnerShipHistory" value="No" checked />
                                <label for="btn_VehicleOwnerShipHistoryN">No</label>
                            </div>
                        </div>
                        <div class="contact-input-group" id="VehicleOwnerShipHistory">
                            <label for="email">Please explain below:</label>
                            <textarea id="VownershipRemarks" name="VownershipRemarks" cols="30" rows="7" value="" placeholder="Enter current odometer reading details"></textarea>
                        @Html.ValidationMessageFor(x=>x.VownershipRemarks,string.Empty,new {@class="text-danger"})
                        </div>

                        @*vehicle damagae*@
                        <div class="mt-3">
                            <label for="email">To your knowledge, has this vehicle ever been in an accident?</label>
                            <div class="switch-field">
                                <input type="radio" id="btn_VehicleDmgRprY" name="VDamage" value="Yes" />
                                <label for="btn_VehicleDmgRprY">Yes</label>
                                <input type="radio" id="btn_VehicleDmgRprN" name="VDamage" value="No" checked />
                                <label for="btn_VehicleDmgRprN">No</label>
                            </div>
                        </div>
                        <div class="contact-input-group" id="VehicleDamageRepair">
                            <label for="email">Please explain below:</label>
                            <textarea id="VDamageRemarks" name="VDamageRemarks" cols="30" rows="7" value="" placeholder="Enter Vehicle Damage Repair Remarks"></textarea>
                         @Html.ValidationMessageFor(x=>x.VDamageRemarks,string.Empty,new {@class="text-danger"})
                        </div>
                        @*vehicle damage*@
                        <h1>Ownership, Title & Location</h1>

                        @* Vehicl OwnerShip*@
                        @*vehicle Accident*@
                        <div class="mt-3">
                            <label for="email">Are you a dealer, or a private seller?</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" value="Dealer" name="sellerType" id="rdrseller">
                                <label class="form-check-label" for="flexRadioDefault1"> Dealer</label>
                            </div>

                            <br />
                            <div class="form-check">
                                <input type="radio" class="form-check-input" value="Private" name="sellerType" id="rdrPrivate">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Private Party
                                </label>
                            </div>
                            @Html.ValidationMessageFor(x=>x.sellerType,string.Empty,new {@class="text-danger"})
                        </div>
                        <div class="contact-input-group" id="PartyDealer">
                            <div class="switch-field">
                                <input type="radio" id="btn_VehicleEntitledonNameY" name="switch-one" value="yes" checked />
                                <label for="btn_VehicleEntitledonNameY">Yes</label>
                                <input type="radio" id="btn_VehicleEntitledonNameN" name="switch-one" value="no" />
                                <label for="btn_VehicleEntitledonNameN">No</label>
                            </div>
                        </div>
                        <div class="contact-input-group" id="PrivateDealer">
                            <label for="email">What is the name of your dealership? Please also list your website below.</label>
                            <input type="text" name="DealerName" value="@Model.DealerName" placeholder="Your DealerName">
                        </div>
                        <div class="contact-input-group" id="VehicleEntitledOwner">
                            <label for="email">Please explain below:.</label>
                            <input type="text" name="OwnerDetails" value="@Model.OwnerDetails" placeholder="Enter Title/OwnerShip Details">
                        </div>
                        @*vehicle Accident*@
                        @*vehicle OwnerShip*@
                        @*TITLE sTATUS*@
                        <div class="contact-input-group">
                            <label for="drop">Title Status</label>
                            <select class="form-select" aria-label="Default select example" name="Vtitled">
                                <option selected value="0">Select title status</option>
                                <option>Clean</option>
                                <option>Salvage</option>
                                <option>Rebuilt</option>
                                <option>Othe Explain(Below)</option>
                            </select>
                        </div>
                        @*TITLE SSTATUS eND*@
                        @*TITLE sTATUS*@
                        <div class="contact-input-group">
                            <label for="drop">State</label>
                            <select class="form-select" aria-label="Default select example" name="TitleState" value="@Model.TitleState">
                                <option selected value="0">Select State</option>
                                <option>Albama</option>
                                <option>Alaska</option>
                                <option>Arizona</option>
                                <option>Araskas</option>
                                <option>Californaia</option>
                            </select>
                        </div>
                        @*TITLE SSTATUS eND*@
                        <div class="contact-input-group">
                            <label for="email">Where is the vehicle located?</label>
                            <input id="VehicleLocated" name="VehicleLocated" placeholder="Enter City, State, and ZIP code" value="@Model.VehicleLocated">
                        </div>
                        <h1>Reserve</h1>
                        <div class="mt-3">
                            <label for="email">Do you want a Reserve or No Reserve auction?</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" value="Reserve" name="Reserve" id="Reserve">
                                <label class="form-check-label" for="flexRadioDefault1"> Reserve</label>
                            </div>

                            <br />
                            <div class="form-check">
                                <input type="radio" class="form-check-input" value="NoReserve" name="Reserve" id="NonReserve" checked>
                                <label class="form-check-label" for="flexRadioDefault2">
                                    No Reserve
                                </label>
                            </div>
                        </div>
                        <div class="contact-input-group" id="VehicleReserve">
                            <label for="email">Please explain below:.</label>
                            <input type="text" name="ReserveRemaks" value="@Model.ReserveRemaks" placeholder="$ Enter Reserve Amount">
                        </div>
                        <h1>Additional Information</h1>
                        <p>Is there anything else we should know to determine if your vehicle is a good fit for auction (modifications, rare factory features/options, etc.)?</p>
                        <div class="contact-input-group" id="PartyDealer">
                            <div class="switch-field">
                                <input type="radio" id="AddInfoY" name="switch-one" value="yes" checked />
                                <label for="AddInfoY">Yes</label>
                                <input type="radio" id="AddInfoN" name="switch-one" value="no" />
                                <label for="AddInfoN">No</label>
                            </div>
                        </div>
                        <div class="contact-input-group" id="AddInfoR">
                            <label for="email">Please explain below:</label>
                            <textarea id="massege" cols="30" rows="7" name="AdInfoRemarks" placeholder="Enter Details" Value="@Model.AdInfoRemarks"></textarea>
                        </div>
                        <h4>Photos</h4>
                        <div class="contact-input-group">
                            <p class="css-1jccshs e1kg4do43">
                                Please upload at least <strong>10 photos</strong> of your vehicle using the submission box below.
                                Your photos will begin uploading when you click the 'Submit' button at the bottom of this form.<br><br>Include images of the interior and exterior that provide a sense for your vehicle's current condition. The higher quality your images are, the easier it will be for us to assess whether your vehicle is right for our platform.<br><br>
                                <strong>Need help taking photos? View our <a target="_blank" rel="noopener noreferrer" class="chakra-link css-1tue41d" href="/pdf/photo-tips-and-checklist.pdf">Photo Guide</a>!</strong>
                            </p>
                            <div>
                                <input type="file" id="file" name="Images" si multiple value="@Model.Images" />
                                @Html.ValidationMessageFor(m => m.Images, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="contact-input-group mt-0">
                            <button type="submit" class="submit-btn">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>