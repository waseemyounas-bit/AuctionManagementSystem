@model AMSModels.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string UserName = string.Empty;
    string password = string.Empty;
    if (TempData["UserName"] != null) UserName = Convert.ToString(TempData["UserName"]);
    if (TempData["password"] != null) password = Convert.ToString(TempData["password"]);
}
    <!-- =============== breadcrumb area start =============== -->
    <div class="breadcrumb breadcrumb-style-one mb-0 ">
        <div class="container">
            <div class="col-lg-12 text-center">
                <h1 class="breadcrumb-title">Login</h1>
                <ul class="d-flex justify-content-center breadcrumb-items">
                    <li class="breadcrumb-item"><i class="bi bi-house-door"></i> <a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Login</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- =============== breadcrumb area end =============== -->
    <!-- =============== register-section start =============== -->

    <section class="register-section pt-110">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-12">
                    <div class="register-btn-group">
                        <a href="register" class="register-btn style2">Register</a>
                        <a href="login" class="login-btn style2">Login</a>
                    </div>
                </div>
            </div>
            <div class="row gy-4">
                <div class="col-lg-6">
                    <div class="register-left-area style2">
                        <h3>Hello Again</h3>
                        <p>Wellcome Back You’ve Been Missed</p>
                        <a href="index.html" class="transparent-btn">Back Home</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="right-form-area">
                        <h3>Login Your Account</h3>

                        <form class="w-100" asp-action="PostLogin" method="post" id="loginForm">
                            @if (TempData["error"] != null)
                            {
                                <script type="text/javascript">
                                    window.onload = function () {
                                        swal("Request Save Succefully!", '@TempData["pesan"]', "error");
                                    };
                                </script>
                            }
                            <div class="form-inner">
                                <label>User Name*</label>
                                <input type="text" name="UserName" placeholder="User Name" value="@UserName" required>
                                @Html.ValidationMessageFor(x=>x.FullName,string.Empty,new {@class="text-danger"})
                            </div>
                            <div class="form-inner">
                                <label>Password *</label>
                                <input type="password" name="password" id="password" placeholder="Password" value="@password" required />
                                @Html.ValidationMessageFor(x=>x.Password,string.Empty,new {@class="text-danger"})
                                <i class="bi bi-eye-slash" id="togglePassword"></i>
                            </div>
                            <div class="form-inner d-flex justify-content-between flex-wrap">
                                <div class="form-group">
                                    <input type="checkbox" id="html">
                                    <label for="html">I agree to the Terms & Policy</label>
                                </div>
                                <!-- <input class="styled-checkbox" id="styled-checkbox-1" type="checkbox" value="value1">
                                <label class="check-box-text">Remember Me</label> -->
                                <a href="#" class="forgot-pass">Forgotten Password</a>
                            </div>
                            <button class="account-btn" id="BtnSubmit">LOGIN ACCOUNT</button>
                        </form>
                        <div class="alternate-signup-box">
                            <h6>Don't have account?</h6>
                            <div class="btn-group gap-4">
                                <a class="account-btn" id="BtnSubmit" asp-action="Register">CREATE NEW ACCOUNT</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- =============== register-section end =============== -->
